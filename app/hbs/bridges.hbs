<!-- Edit Modal -->
<div class="modal fade" id="bridge-edit-modal" tabindex="-1" role="dialog" aria-labelledby="bridge-edit-modal-label">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header modal-header-primary">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="bridge-edit-modal-label">{{I18n 'bridges-edit-modal-label'}}</h4>
			</div>
			<div class="modal-body">
				<form>
					<input id="bridge-edit-modal-id" type="hidden">
					<div class="form-group">
						<label for="bridge-edit-modal-name" class="control-label">{{I18n 'bridges-edit-modal-name'}}</label>
						<input type="text" class="form-control" id="bridge-edit-modal-name">
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">{{I18n 'bridges-edit-modal-close'}}</button>
				<button type="button" class="btn btn-primary text-left" id="bridge-edit-modal-save" data-dismiss="modal">{{I18n 'bridges-edit-modal-save'}}</button>
				<script>
					$('#bridge-edit-modal-save').click(function() {
						let id = $('#bridge-edit-modal-id').val();
						let name = $('#bridge-edit-modal-name').val();

						huE_bridges.save({id: id,
										  name: name});
					});
				</script>
			</div>
		</div>
	</div>
</div>
