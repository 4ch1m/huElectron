<!-- Edit Button -->
<button id="edit-button-bridge-{{connectedBridge.id}}" class="btn btn-lg btn-primary btn-block"><span class="glyphicon glyphicon-pencil"></span>&nbsp;&nbsp;&nbsp;{{I18n 'bridges-edit'}}</button>
<script>
    $('#edit-button-bridge-{{connectedBridge.id}}').on('click', function() {
        $('#bridge-edit-modal-id').val('{{connectedBridge.id}}');
        $('#bridge-edit-modal-name').val(huE_common.htmlDecode('{{connectedBridge.name}}'));

        $('#bridge-edit-modal').modal('show');
    });
</script>

